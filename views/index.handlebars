

<div class="main-container">
	<img src="assets/img/burger.jpg"/>
	<h1 style="font-family: 'Sigmar One', cursive; color:gold">Burger Time!</h1>


	<div class="container">
		<div class="centered" class="list">
		  <h2>Burgers:</h2>
		  <ul class="list-group" style="align-content: center; align-content: center; ">
		    {{#each burgers}}
		      {{#unless this.devoured}}
		        <li class="list-group-item list-group-item">
		          {{this.burger_name}}

		          <form action="/{{this.id}}?_method=PUT" method="POST">
		            <input type="hidden" name="devoured" value="true">
		            <button type="submit" class="btn btn-success">Devour it!</button>
		          </form>
							
		        </li>
		      {{/unless}}
		    {{/each}}
		  </ul>
		</div>
	</div>


	<div class="container">
		<div class="centered" class="list">
		  <h2 >Devoured Burgers:</h2>
		  <ul class="list-group">
		    {{#each burgers}}
		      {{#if this.devoured}}
		        <li class="list-group-item list-group-item-danger">
		          {{this.burger_name}}
							<form action="/delete/{{this.id}}?_method=DELETE" method="POST">
							<input type="hidden" name="_method" value="DELETE">				
								<button type="submit" class="btn btn-danger">Remove</button>
		          </form>
		        </li>
		      {{/if}}
		    {{/each}}
		  </ul>
		</div>
	</div>


	<div class="container">
		<div class="centered" class="list">
			<h2>Build your Burger</h2>
			<form class="create-update-form" action="/" method="POST">
			  <div class="form-group">
			    <label for="burger">Burger Name:</label>
			    <br>
			    <input type="text" id="burger" class="user-burgername" name="burger_name" aria-label="Username" aria-describedby="basic-addon1">
			  </div>
			  <button type="submit" class="btn btn-primary">Add Burger</button>
			</form>
		</div>
	</div>
</div>